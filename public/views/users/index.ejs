<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/style.css" rel="stylesheet" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400;600;700;900&display=swap" rel="stylesheet">
    <title>User Management</title>
</head>
<body>
    <%- include('__menu') %>
    <div id="container">
        <div id="search" style="float: right;">
            <div style="clear: both;"></div>
            <form action="/" method="GET">
                <a href="/" class="link" style="float: left; margin: 5px;">refresh</a>
                <input name="search" type="text" id="searcher"/>
                <button class="btn-search" style="color: white;">Search</button>
            </form>
        </div>
        <div style="clear: both;"></div>
        <table>
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Surrname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Options</th>
            </tr>

            <% users.forEach(user => { %>
                <% number++ %>
                <tr>
                    <td><%= number %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.surrname %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.role %></td>
                    <td>
                        <div>
                            <a href="users/edit/<%= user.id %>" class="btn btn-edit"><div class="btn" style="float: left;">Edit</div></a>
                            <a href="users/delete/<%= user.id %>" class="btn btn-delete"><div class="btn" style="float: left;">Delete</div></a>
                            <div style="clear: both;"></div>
                        </div>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
    
</body>
</html>